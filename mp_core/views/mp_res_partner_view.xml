<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mp_res_partner_form_view" model="ir.ui.view">
            <field name="name">mp.core.res.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='user_ids']" position="before">
                    <field name="mobile_ms" widget="phone"/>
                </xpath>
                <xpath expr="//group/field[@name='website']" position="before">
                    <field name="email_2" widget="email"/>
                </xpath>
                <xpath expr="//kanban/field[@name='mobile']" position="after">
                    <field name="mobile_ms" widget="phone"/>
                </xpath>
                <xpath expr="//kanban/field[@name='email']" position="after">
                    <field name="email_2" widget="email"/>
                </xpath>
                <xpath expr="//group/field[@name='mobile']" position="after">
                    <field name="mobile_ms" widget="phone"/>
                </xpath>
                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='email']" position="after">
                    <field name="email_2" widget="email"/>
                </xpath>
                <xpath expr="//group[@name='misc']/field[@name='ref']" position="replace"/>
                <xpath expr="//field[@name='type']" position="before">
                    <field name="ref" readonly="1" string="Customer Code"/>
                </xpath>

                <xpath expr="//group[@name='sale']/field[@name='user_id']" position="after">
                    <field name="is_client_effective"/>
                    <field name="source_ids" widget="many2many_tags"/>
                    <field name="referred"/>
                </xpath>
            </field>
        </record>

        <record id="mp_source_menu_configuration" model="ir.actions.act_window">
            <field name="name">Sources</field>
            <field name="res_model">utm.source</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="mp_source_menu" name="Sources" parent="contacts.res_partner_menu_config" action="mp_core.mp_source_menu_configuration" sequence="2"/>

    </data>
</odoo>